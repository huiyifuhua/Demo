/* pages/case/case.wxss */
.wrap{
	display: flex;
	flex-direction: row;
}
.nav{
	width: 200rpx;
	height: 100vh;
	background: #eee;
	flex-shrink: 0;/**/
}
.nav view{
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
height: 80rpx;
border-bottom: 2rpx solid #666;
color: #666;
}
.nav .active{
	color: red;
	position: relative;
	/* transition: all 1s; */
}
.nav .active:before{
	content: "";
	position: absolute;
	height: 100%;
	width: 4rpx;
	background:red;
	left: 0;
}
.list{
	display: flex;
	flex-direction: row;
	flex-shrink: 0;
	width: 100%;
	align-content: flex-start;
	/* height: 100vh; */
	flex-wrap: wrap;
	
}
.list navigator{
	width: 35.8%;
	height: 400rpx;
	/* border:1px solid red; */
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin:8rpx 2rpx;


}
.list navigator image{
	height: 80%;
	width: 100%;
	padding: 4rpx;
	/* border:1px solid black; */

}
.list navigator text{
	width: 100%;
	height: 20%;
	/* font-size: 25rpx; */
	/* display: flex; */
	/* align-items: center;
	justify-content: center; */

	line-height: 76rpx;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.list navigator button{
	font-size: 28rpx;
	/* display: block; */
	/* background: red; */
	color: red;
	border:2rpx solid red;
	box-sizing: border-box;
}
.loading{
	height: 80rpx;
	line-height: 80rpx;
	position: absolute;
	left: 50%;top:50%;
	transform: translate(-50%,-50%)
}